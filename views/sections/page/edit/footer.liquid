<div class="container mx-auto px-4 sticky bottom-4 flex flex-row justify-between">
  <div>
    <a class="button-danger" href="/admin/pages/delete/{{ item.id }}">Delete</a>
    <button form="main-form" type="submit" class="{% if published %}button-secondary{% else %}button-primary{% endif %}">Save Draft</button>
    {% if published %}
      <button class="button-secondary" type="submit" name="action" value="revert" form="main-form">Revert Published</button>
      <button class="button-primary" type="submit" name="action" value="publish" form="main-form">Save</button>
    {% endif %}
  </div>
  <div class="inline-block bg-white">
    {% render "page/edit/language", language: language, form: "main-form" %}
  </div>
</div>