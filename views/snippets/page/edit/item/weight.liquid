{%- liquid
   assign prefix = prefix | default:"prefix"
   assign value = weight | default: "0"
   assign id = prefix | append: "@_weight" | md5
-%}

<div>
   <label for="{{ id }}" class="hidden">weight</label>
   <input id="{{ id }}" name="{{ prefix }}@_weight" value="{{ value }}" pattern="[0-9]+"
   class="block w-10 me-2 text-center rounded-full border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
   />
</div>