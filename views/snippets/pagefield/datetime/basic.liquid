<div class="relative">
    <label for="field-{{ selector }}" class="absolute -top-2 left-2 inline-block bg-white px-1 text-xs font-medium text-gray-900"><i class="far fa-calendar-alt"></i> {{ label }}</label>
    <input class="mousetrap block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 page-field-upload-text" type="datetime-local" name="{{ selector }}" value="{{ value }}" id="field-{{ selector }}" lang="en" max="2200-12-30T00:00" placeholder="{{ placeholder }}"/>
</div>