<div class="relative">
    {% render 'pagefield/input-label', selector: selector, label:label, icon:icon %}
    <input
        class="block w-full border-0 p-0 font-light bg-transparent focus:border-0 focus:ring-2 focus:ring-inset focus:ring-transparent {{ class_name }}"
        type="datetime-local"
        name="{{ selector }}"
        value="{{ value }}"
        id="field-{{ selector }}"
        lang="en"
        max="2200-12-30T00:00"
        placeholder="{{ placeholder }}"
    />
</div>