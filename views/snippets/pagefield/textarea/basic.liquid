{%- assign label_text = label | strip_html -%}
<div class="relative group col-span-2 input-editable">
  {% render 'pagefield/input-label', selector: selector, label:label, icon:icon %}
  <textarea type="text" name="{{ selector }}" id="field-{{ selector }}"
            placeholder="{{ placeholder | default: label_text | truncate: 200 | replace:"&", "&amp;" | replace: "<", "&lt;" | replace: ">", '&gt;' | replace: "\"", "&quot;" }}"
            rows="{{ rows | default : 4 }}"
            class="hidden"
  >{{ value | replace:"&", "&amp;" | replace: "<", "&lt;" | replace: ">", '&gt;' | replace: "\"", "&quot;" }}</textarea>
  <div class="text-xs block w-full border-0 p-0 bg-transparent focus:border-0 focus:ring-2 focus:ring-inset focus:ring-transparent outline-0 outline-transparent {{ class_name }}" contenteditable="true">{{ value }}</div>
</div>